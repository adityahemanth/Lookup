<div id="index-banner" class="parallax-container" style="margin-top:-65px;">
    <div class="section no-pad-bot">
        <div class="container">
            <br>
            <br>
            <h1 class="header center white-text"> Welcome to Lookup </h1>
            <div class="row center">
                <h5 class="header col s12 light"> Find the hottest places around you!</h5>
            </div>
            <br>
            <br>


            <input id='search' type='text' , class='input-field' , style='color:white; font-size:1.35em'>


            <div class="center-align" style="padding-top:15px"> <a class="waves-effect waves-light btn" onclick="dosearch()">Search</a>
            </div>

        </div>
    </div>
    <div class="parallax"><img src="https://lh3.googleusercontent.com/-nBpoRGciu2k/VipgKMMfo8I/AAAAAAAAMao/KdSQEgAgptU/w1920-h1080/firewatch_150305_04.png" style="transform: translate3d(-50%, 260px, 0px); display: block;">
    </div>
</div>

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s3"><a class="active" href="#test2"> card view </a>
            </li>
            <li class="tab col s3"><a href="#test1"> map view </a>
            </li>
        </ul>
    </div>
    <div id="test1" class="col s12">
      <div class="container" style="margin-top:20px">
            <div class="row">
                <div id="map" class="s12" style="height:700px;"></div>
            </div>
        </div>
    </div>
    <div id="test2" class="col s12">

        <div class="container">
            <div class="row">
                <% @places.each do |p| %>
                    <div class="col l4 m6 s12" style="padding:15px;">
                        <div class="ui card">
                            <div class="content">
                                <div class="right floated meta">14mi</div>
                                <%=image_tag p.photos.first.image.url, :class=> "ui avatar image" %>
                                    <%= link_to( truncate(p.title, length: 25) ,{:action=> 'show', :id => p.id})%>
                            </div>
                              <div class="image" style="height:200px; overflow:hidden;">
                                  <%=image_tag p.photos.first.image.url, :class=> "ui wireframe image valign" %>
                                      <!-- <img class="ui wireframe image" src="http://www.psdgraphics.com/wp-content/uploads/2015/06/ecology-nature.jpg"> -->
                              </div>
                            <div class="content">
                                <span class="right floated">
          <i class="material-icons icon" style="float:left; margin-right:5px;">favorite_border</i>
          <% rate = @ratings.where('cacheable_id=?', p.id).first %>
          <% if( rate != nil) %>
          <%= rate.qty %> ratings 
          <% else %>
          0 ratings
          <% end %>
        </span>
                                <i class="material-icons icon" style="float:left; margin-right:5px;">comment </i> 3 reviews
                            </div>
                            <div class="extra content">
                                    <p> Rate this place </p>
                                    <div> <%= rating_for p, "rating", :disable_after_rate => true, :cancel_place => 'right' %> </div>
                            </div>
                        </div>
                    </div>
                    <% end %>
            </div>

        </div>
    </div>

</div>



