
<div class="card" style="padding:25px;margin:30px;">
<div class = "row">

<h1> place id : <%= @place.id %> </h1>
	<div class="ui card">
                            <div class="content">
                                <div class="right floated meta">14mi</div>
                                <%=image_tag @place.photos.first.image.url, :class=> "ui avatar image" %>
                                    <%= link_to( truncate(@place.title, length: 25) ,{:action=> 'show', :id => @place.id})%>
                            </div>
                              <div class="image" style="height:200px; overflow:hidden;">
                                  <%=image_tag @place.photos.first.image.url, :class=> "ui wireframe image valign" %>
                                      <!-- <img class="ui wireframe image" src="http://www.psdgraphics.com/wp-content/uploads/2015/06/ecology-nature.jpg"> -->
                              </div>
                            <div class="content">
                                <span class="right floated">
          <i class="material-icons icon" style="float:left; margin-right:5px;">favorite_border</i>
          <%= @rating %>
        </span>
                                <i class="material-icons icon" style="float:left; margin-right:5px;">comment </i> 
                                <%= @place.reviews.count %> reviews
                            </div>
                            <div class="extra content">
                                    <p> Rate this place </p>
                                    <div> <%= rating_for @place, "rating", :disable_after_rate => true, :cancel_place => 'right' %> </div>
                            </div>
                        </div>

	<% @place.photos.each do |place| %>

		<div style="padding:10px">
		<%= image_tag place.image.url, :class => "responsive-img", :style => "height:150px;" %>
		</div>
	<% end %>

</div>
</div>